%wrapper.header
  %container
    %row.collapse
      %columns{small: 12}
        %img{src: @event.image_url}
    %row.collapse
      %columns{small: 12}
        %h3= @event.name
    %row.collapse
      %columns{small: 12, large: 6}
        %p
          = l @event.starts_at, format: :schedule_date_format
          %br
          At #{l @event.starts_at, format: :time_with_zone}
      %columns{small: 12, large: 6}
        %p.text-right.small-text-left
          = icon "map-marker", class: "margin-right-1"
          = @event.city_name

%container
  %spacer{size: 16}
  %row.collapse
